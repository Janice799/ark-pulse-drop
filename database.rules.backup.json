{
    "rules": {
        "leaderboard": {
            ".read": true,
            ".write": "auth != null",
            ".indexOn": [
                "score"
            ],
            "$entry": {
                ".validate": "newData.hasChildren(['name','score','level','combo','date'])"
            }
        },
        "users": {
            "$uid": {
                ".read": "auth != null && auth.uid == $uid",
                ".write": "auth != null && auth.uid == $uid"
            }
        },
        "purchases": {
            "$uid": {
                ".read": "auth != null && auth.uid == $uid",
                ".write": false
            }
        }
    }
}